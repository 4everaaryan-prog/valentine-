<script>

let yesSize = 20;

function moveNo() {
  const button = document.getElementById("noBtn");

  const maxX = window.innerWidth - 100;
  const maxY = window.innerHeight - 50;

  const randomX = Math.random() * maxX;
  const randomY = Math.random() * maxY;

  button.style.left = randomX + "px";
  button.style.top = randomY + "px";

  yesSize += 4;
  document.getElementById("yesBtn").style.fontSize = yesSize + "px";
}

function celebrate() {

  confetti({
    particleCount: 200,
    spread: 100,
    origin: { y: 0.6 }
  });

  setTimeout(() => {
    confetti({
      particleCount: 150,
      spread: 120
    });
  }, 400);

  document.body.innerHTML = `
    <h1>Aryan ‚ù§Ô∏è Kritika</h1>
    <h2>You are the love of my life üíò</h2>
    <div class="final-message">
      Kritika, I still remember the time we spent together in the library,
      sitting close, pretending to study but actually stealing glances at you.
      Those small moments meant everything to me.
      <br><br>
      From quiet talks to shared smiles, you became my favorite memory
      and my forever dream.
      <br><br>
      I love you more than words can explain ‚ù§Ô∏è
    </div>
    <h2 style="margin-top:30px;">Forever Yours, Aryan üíñ</h2>
  `;
}

</script>

